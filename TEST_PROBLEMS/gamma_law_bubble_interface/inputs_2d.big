&PROBIN

 !----------------------------------------------------------------------------
 ! grid
 !----------------------------------------------------------------------------
 spherical_in = 0

 max_levs = 1
 n_cellx = 512
 n_celly = 512
 max_grid_size = 64

 prob_hi_x = 2.0
 prob_hi_y = 2.0

 xlo_boundary_type = "periodic"
 xhi_boundary_type = "periodic"

 ylo_boundary_type = "outlet"
 yhi_boundary_type = "outlet"


 !----------------------------------------------------------------------------
 ! timestepping
 !----------------------------------------------------------------------------
 cflfac = 0.8d0

 max_step  = 100000

! stop_time = 4.5d-4
 stop_time = 2.0d-4
! stop_time = 5.d-5


 !----------------------------------------------------------------------------
 ! MG
 !----------------------------------------------------------------------------
 max_mg_bottom_nlevels = 3
 mg_bottom_solver = 4
 hg_bottom_solver = 4


 !----------------------------------------------------------------------------
 ! perturbation
 !----------------------------------------------------------------------------

 perturb_model = T

 ! max Mach number ~0.05
! pert_factor = 8.1d-3
! plot_deltat = 4.5d-5

 ! max Mach number ~0.15
 pert_factor = 8.3d-2
 plot_deltat = 1.5d-5

 ! max Mach number ~0.45
! pert_factor = 3.47d0
! plot_deltat = 5.d-6

 y_pert_center = 0.75d0


 !----------------------------------------------------------------------------
 ! initial model
 !----------------------------------------------------------------------------

 dens_base = 1.65d-3
 pres_base = 1.65d6
 r_mid = 1.0

 s_jump = 1.1


 !----------------------------------------------------------------------------
 ! algorithm
 !----------------------------------------------------------------------------

 anelastic_cutoff = 1.d-10
 base_cutoff_density = 1.d-10

 evolve_base_state = F
 fix_base_state = T

 ppm_type = 0

 init_iter = 3

 do_initial_projection = T
 init_divu_iter = 3


 !----------------------------------------------------------------------------
 ! physics
 !----------------------------------------------------------------------------
 grav_const = -1.d9


 !----------------------------------------------------------------------------
 ! outputting
 !----------------------------------------------------------------------------

 plot_int = 10000
 chk_int  = -1

 plot_base   = T

    verbose = 1
 mg_verbose = 2
 cg_verbose = 0

/
