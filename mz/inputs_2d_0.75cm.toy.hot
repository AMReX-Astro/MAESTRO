&PROBIN

 !----------------------------------------------------------------------------
 ! problem setup
 !----------------------------------------------------------------------------
 model_file = "toy_xrb.hot.hse.tanh.delta_12.000cm.dx_0.750cm"

 spherical_in = 0

 grav_const = -2.45e14

 ! temperature perturbation
 perturb_model = T
 xrb_pert_size = 50
 xrb_pert_factor = 1.0d-5
 xrb_pert_type = 1
 xrb_pert_height = 575.0d0

 ! velocity perturbation
 apply_vel_field    = T
 velpert_scale      = 1.0d2
 velpert_amplitude  = 1.0d5
 velpert_height_loc = 575.0
 num_vortices       = 8


 !----------------------------------------------------------------------------
 ! gridding
 !----------------------------------------------------------------------------
 test_set = "gr0_2d_0.75cm.toy"


 prob_lo_x = 0.0d0
 prob_lo_y = 0.0d0

 prob_hi_x = 768.0d0
 prob_hi_y = 2304.0d0

 bcx_lo = -1
 bcx_hi = -1
 bcy_lo = 14
 bcy_hi = 12


 !----------------------------------------------------------------------------
 ! timestepping
 !----------------------------------------------------------------------------
 max_step  = 100000

 stop_time = 2.5

 cflfac = 0.7

 init_shrink = 0.1
 max_dt_growth = 1.1

 use_soundspeed_firstdt = F
 use_divu_firstdt = F


 !----------------------------------------------------------------------------
 ! outputting
 !----------------------------------------------------------------------------
 plot_int  = -1
 plot_deltat = 1.e-4
 chk_int   = 500

 plot_base = T
 plot_h_with_use_tfromp = T
 plot_cs = T
 plot_ad_excess = T


 !----------------------------------------------------------------------------
 ! core Maestro algorithm
 !----------------------------------------------------------------------------
 ppm_type = 1

 species_pred_type = 3
 enthalpy_pred_type = 4

 ! initial projections
 do_initial_projection = T
 init_divu_iter = 3
 init_iter = 3

 use_tfromp = F
 dpdt_factor = 0.0d0

 base_cutoff_density = 1.d3
 anelastic_cutoff = 1.d3

 do_sponge = T
 sponge_start_factor = 25

 verbose = 1


 !----------------------------------------------------------------------------
 ! diffusion
 !----------------------------------------------------------------------------
 use_thermal_diffusion = F
 limit_conductivity = T


 !----------------------------------------------------------------------------
 ! projections / MG
 !----------------------------------------------------------------------------
 mg_bottom_solver = 4
 hg_bottom_solver = 4
 max_mg_bottom_nlevels = 4

 mg_verbose = 0
 cg_verbose = 0


 !----------------------------------------------------------------------------
 ! microphysics
 !----------------------------------------------------------------------------
 burner_threshold_species = "H1"
 
 use_eos_coulomb = T


/
