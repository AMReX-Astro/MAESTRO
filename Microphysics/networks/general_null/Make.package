f90EXE_sources += network.f90
f90EXE_sources += castro_burner.f90

# network.f90 is created at build time for this network
network.f90:   $(GENERAL_NET_INPUTS) $(FBOXLIB_HOME)/extern/networks/general_null/network.template
	@echo "---------------------------------------------------------------------------"
	@echo "WRITING network.f90:"
	$(FBOXLIB_HOME)/extern/networks/general_null/write_network.py \
            -t $(FBOXLIB_HOME)/extern/networks/general_null/network.template \
            -s $(GENERAL_NET_INPUTS) \
            -o network.f90
	@echo "---------------------------------------------------------------------------"
	@echo " "


# remove network.f90 for 'make clean' and therefore 'make realclean'
clean::
	$(RM) network.f90
