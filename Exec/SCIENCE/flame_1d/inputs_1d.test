&PROBIN

 ! geometry
 dm_in = 1
 spherical_in = 0


 ! grid size
 max_levs = 1
 n_cellx = 2048
 
 max_grid_size = 2048


 ! domain size
 prob_hi_x = 20.0d0


 ! problem data
 dens_fuel = 5.d7
 temp_fuel = 1.d8
 xc12_fuel = 0.5d0
 vel_fuel = 5.d4

 temp_ash = 3.0d9
 
 interface_pos_frac = 0.125d0
 smooth_len_frac = 0.025d0

 do_smallscale = T


 ! stepping parameters
 max_step  = 1000
 stop_time = 1.d0
 cflfac = 0.5d0
 init_shrink = 0.1d0
 max_dt_growth = 1.2d0


 ! physics
 grav_const = 0.d0
 use_thermal_diffusion = T
 use_eos_coulomb = T
 ppm_type= 1
 dpdT_factor = 0.3d0


 ! projection
 do_initial_projection = T
 init_divu_iter = 3
 init_iter = 1


 ! output
 plot_int  = -1
 plot_deltat = 1.d-5
 chk_int   = 1000


 ! boundary conditions
xlo_boundary_type = "inlet"
xhi_boundary_type = "outlet"



 ! verbosity
 verbose    = 10
 mg_verbose = 1
 cg_verbose = 0


 ! constraint parameters
 evolve_base_state = F
 beta0_type = 3

/
