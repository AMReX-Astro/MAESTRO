&PROBIN
 model_file = "sub_chandra.M_WD-1.00.M_He-0.05.hse.C.1280.hotcutoff"
 drdxfac = 5

 job_name = "128^3 base, hot T cutoff -- for testing"

 hg_bottom_solver = 1
 mg_bottom_solver = 1
 max_mg_bottom_nlevels = 3

 max_levs = 1
 regrid_int = 2

 n_cellx = 128
 n_celly = 128
 n_cellz = 128

 stop_time = 30000.

 max_step  = 50

 init_iter = 1
 init_divu_iter = 3
 do_initial_projection = T

 max_grid_size = 64

 anelastic_cutoff = 6.d4
 base_cutoff_density = 1.d4
 buoyancy_cutoff_factor = 2.d0
 sponge_center_density = 6.d4
 sponge_start_factor = 2.0d0
 sponge_kappa = 10.0d0

 spherical_in = 1
 octant = .true.
 dm_in = 3
 do_sponge = .true.

 prob_hi_x = 7.5d8
 prob_hi_y = 7.5d8
 prob_hi_z = 7.5d8


 plot_base_name = "subCh_hot_baserun_plt"
 plot_int  = -1
 plot_deltat = 1.0d0

 check_base_name = "subCh_hot_baserun_chk"
 chk_int   = 25

 cflfac = 0.7d0
 init_shrink = 0.1d0
 max_dt_growth = 1.1d0
 use_soundspeed_firstdt = T
 use_divu_firstdt = T

xlo_boundary_type = "symmetry"
xhi_boundary_type = "outlet"
ylo_boundary_type = "symmetry"
yhi_boundary_type = "outlet"
zlo_boundary_type = "symmetry"
zhi_boundary_type = "outlet"

    verbose = 1
 mg_verbose = 1
 cg_verbose = 0

 do_burning = T

 enthalpy_pred_type = 1
 evolve_base_state = T

 dpdt_factor = 0.0d0
 species_pred_type = 3
 use_tfromp = T

 single_prec_plotfiles = T

 use_eos_coulomb = T

 plot_trac = F

 velpert_amplitude = 1.d5
 velpert_scale = 5.d7
 velpert_steep = 1.d7

